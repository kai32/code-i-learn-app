<div class="well sidebar-nav">
  <ul class="nav nav-list">
    <% if local_assigns[:related_articles] %>
      <li class="nav-header"><h3><%= link_to 'Related articles', '#' %></h3></li>
      <% related_articles.each do |article| %>
        <li><%= link_to "#{article.title} #{"<i class=\"fa fa-star\"></i>" if article.is_featured?}".html_safe, article_path(article) %></li>
      <% end %>
    <% else %>
      <li class="nav-header"><h3><%= link_to 'Featured articles', featured_articles_path %></h3></li>
      <% @featured_articles.each do |article| %>
        <li><%= link_to "#{article.title} <i class=\"fa fa-star\"></i>".html_safe, article_path(article) %></li>
      <% end %>
      <li class="nav-header"><h3><%= link_to "Recent articles", articles_path %></h3></li>
      <% @recent_articles.each do |article| %>
        <li><%= link_to article.title, article_path(article) %></li>
      <% end %>
    <% end %>
  </ul>
</div>
