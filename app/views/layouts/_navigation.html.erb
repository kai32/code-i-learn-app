<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to ('<i class="fa fa-code"></i> Code I Learn'.html_safe ), root_path, class: 'navbar-brand' %>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'About', about_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            Articles<span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "All articles", articles_path %></li>
            <li><%= link_to 'Featured articles', featured_articles_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            Categories<span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "All categories", categories_path %></li>
            <% Category.all.each do |category| %>
              <li><%= link_to category.title, category_path(category) %></li>
            <% end %>
          </ul>
        </li>
        <li><%= link_to "All users", users_path %></li>
        
        <% if current_user %>
          <li><%= link_to "<i class='fa fa-plus'></i> New article".html_safe, new_article_path  %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= avatar_for(current_user, size: "30x30") %> <%= "#{current_user.full_name}#{ " admin" if current_user.is_admin?}" %><span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'My page', user_path(current_user) %></li>
              <li><%= link_to 'Edit my profile', edit_user_registration_path(current_user) %></li>
              <li><%= link_to 'Upload profile pic', upload_profile_pic_path %></li>
            </ul>
          </li>
          <li><%= link_to 'logout', destroy_user_session_path ,method: :delete, class: "btn btn-sm btn-danger" %></li>
        <% else %>
          <li><%= link_to 'Log in', new_user_session_path ,class: "btn btn-sm btn-primary" %></li>
          <li><%= link_to 'Sign up', new_user_registration_path ,class: "btn btn-sm btn-success" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>